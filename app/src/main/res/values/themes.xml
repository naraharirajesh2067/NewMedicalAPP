<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme -->
    <style name="Theme.MySplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splashscreen_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.medicalapp.NoActionBar</item>
        <item name="actionBarTheme">@style/Theme.medicalapp.NoActionBar</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- No Action Bar Theme for MedicalApp -->
    <style name="Theme.medicalapp.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
